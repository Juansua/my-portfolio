---
const {style} = Astro.props;
---
<a class=" w-max" href="#contact-me">
    <button class=`${style} px-[32px] transition duration-300`>
        Contact Me
    </button>
</a>

<style>
    button {
        cursor: pointer;
        font-weight: 500;
        color: #CBE2F4;
        border-radius: 8px;
        border: 1.5px solid #3C6A8D;
        background: #22445E;
        box-shadow: 0px 0px 32px 0px rgba(119, 189, 205, 0.15);
    }

    button:hover {
        border: 1.5px solid #3C6A8D;
        background: #264F6E;
        box-shadow: 0px 0px 48px 0px rgba(119, 189, 205, 0.25);
    }
</style>